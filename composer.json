{
  "name": "vendor/project-name",
  "description": "UT Drupal Kit Site",
  "type": "project",
  "license": "MIT",
  "require": {
    "composer/installers": "^1.7",
    "drupal/core-composer-scaffold": "8.8.x-dev",
    "oomphinc/composer-installers-extender": "1.1.2",
    "utexas/utdk_profile": "^3.0",
    "utexas/utexas_pantheon_saml_auth": "^1.0",
    "utexas/utnews": "^1.0",
    "utexas/utprof": "^1.0",
    "zaporylie/composer-drupal-optimizations": "^1.0"
  },
  "repositories": {
    "drupal": {
      "type": "composer",
      "url": "https://packages.drupal.org/8"
    },
    "utexas": {
      "type": "composer",
      "url": "https://artifacts.austin.utexas.edu/eis1-wcms"
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "config": {
    "optimize-autoloader": true,
    "preferred-install": {
      "*": "dist"
    },
    "sort-packages": true,
    "process-timeout": 0
  },
  "conflict": {
    "drupal/drupal": "*"
  },
  "scripts": {
    "dev-scaffold": [
      "@composer require utexas/utdk_localdev:dev-master --dev",
      "if [ -d web/profiles/utexas/.git ]; then cd web/profiles/utexas && npm ci install && git config core.hooksPath .github/git-hooks; fi"
    ]
  },
  "extra": {
    "drupal-scaffold": {
      "allowed-packages": [
        "drupal/core",
        "utexas/utdk_profile"
      ],
      "locations": {
        "web-root": "web/"
      },
      "file-mapping": {
        "[project-root]/.editorconfig": false,
        "[project-root]/.gitattributes": false
      }
    },
    "installer-types": [
      "utexas-development"
    ],
    "installer-paths": {
      "web/core": [
        "type:drupal-core"
      ],
      "web/modules/contrib/{$name}": [
        "type:drupal-module"
      ],
      "web/profiles/{$name}": [
        "type:drupal-profile"
      ],
      "web/libraries/{$name}": [
        "type:drupal-library"
      ],
      "web/themes/contrib/{$name}": [
        "type:drupal-theme"
      ],
      "drush/contrib/{$name}": [
        "type:drupal-drush"
      ],
      ".docksal": [
        "type:utexas-development"
      ]
    }
  }
}
